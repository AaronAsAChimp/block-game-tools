---
import TopNavLayout from '../../layouts/TopNavLayout.astro';
import AppTopBar from '../../components/AppTopBar.astro';
import {Gradient} from '../../components/page-gradient/index';
import {HelpButton} from '../../components/help-button/index';
import * as help from '../../md/help/gradient.md';

const content = await help.compiledContent();
---
<TopNavLayout title="Gradient" class="page-gradient">
	<Gradient client:only="react" slot="main" />
	<AppTopBar title="Gradient Editor" slot="nav">
		<HelpButton client:only="react" content={content} />
	</AppTopBar>
</TopNavLayout>

