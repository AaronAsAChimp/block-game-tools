---
import RightNavLayout from '../../layouts/RightNavLayout.astro';
import AppSideBar from '../../components/AppSideBar.astro';
import {ColorMap} from '../../components/page-color-map/index'
import {PaletteSelector} from '../../components/palette-selector/index'
import {BlockMapSelection} from '../../components/block-map-selection/index'
import {HelpButton} from '../../components/help-button/index';
import * as help from '../../md/help/map.md';

const content = await help.compiledContent();
---

<RightNavLayout title="Color Map - Block Game Tools - See all the colors of Minecraft" class="page-map">
	<ColorMap client:only="react" slot="main" />
	<AppSideBar title="Color Map" slot="nav">
		<HelpButton client:only="react" content={content} slot="buttons" />
		<PaletteSelector client:only="react" />
		<BlockMapSelection client:only="react" />
	</AppSideBar>
</RightNavLayout>

