---
const {href, title} = Astro.props;
---
<a class="tiles-item" href={href}>
	<div class="tiles-icon"><slot /></div>
	<div class="tiles-title">{ title }</div>
</a>
<style>
.tiles-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	text-decoration: none;
	padding: 1em;
	gap: 0.6em;
	border-radius: 1em;
	background: var(--layer1-color);
	color: var(--layer1-contrast-color);
	transition: 0.5s;
}

.tiles-item:hover {
	background: var(--layer1-hover);
	color: var(--layer1-contrast-hover);
}

.tiles-icon {
	font-size: 4em;
}

.tiles-title {
	font-size: 1.5em;
	text-align: center;
}
</style>