---
import {AppMenu} from './app-menu/index.jsx';
import {MC_VERSION} from 'shared';
import FontAwesomeIcon from './FontAwesomeIcon.astro';
import { faGithubAlt } from '@fortawesome/free-brands-svg-icons';

const {title} = Astro.props;
---
<div class="app-footer">
	<div class="community-links">
		<div class="community-icon">
			<FontAwesomeIcon icon={faGithubAlt} />
		</div>
		<a href="https://github.com/AaronAsAChimp/block-game-tools" class="app-src">Source</a>
		<a href="https://github.com/AaronAsAChimp/block-game-tools/issues" class="app-issues">Issues</a>
	</div>
	<div class="version">Data and textures from Minecraft { MC_VERSION }</div>
	<div class="disclaimer">NOT AN OFFICIAL MINECRAFT PRODUCT. NOT APPROVED BY OR ASSOCIATED WITH MOJANG.</div>
</div>
<style>
.app-footer {
	display: flex;
	flex-direction: row;
	gap: 2em;
	margin: 2em;
	align-items: center;

	color: color-mix(in srgb, var(--layer1-contrast-color), transparent 70%);

	& .community-links {
		display: grid;
		grid-template-areas:
			"icon srclink"
			"icon issuelink"
			"version version";
		align-items: center;
	}

	& .community-links a {
		color: inherit;
		text-decoration: none;
		font-weight: bold;

		&:hover {
			color: color-mix(in srgb, var(--layer1-contrast-hover), transparent 50%);
		}
	}

	& .community-icon {
		grid-area: icon;
		font-size: 3.4em;
		line-height: 1;
		margin-right: 0.4em;
	}

	& .app-src {
		grid-area: srclink;
	}

	& .app-src {
		grid-area: issuelink;
	}

	& .version {
	}

	& .disclaimer {
		/*opacity: 0.4;*/
	}
}
</style>